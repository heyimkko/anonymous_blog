<h1>Edit Blog Entry</h1>
<form action="/posts/<%= @post.id %>/update" method="post">
  <li>
    Title:<BR>
    <input type="text" name="update[title]" size="63" value="<%= @post.title %>">
  </li><BR>
  <li>
    Content:<BR><textarea rows="10", cols="64", name="update[body]"><%= @post.body %></textarea>
  </li><BR>
  <li>
    Tags:<BR>
    <input type="text" name="tag[name]" size="63" value="<%= @tags %>">
  </li><BR>
    <input type="submit" value="Submit Post!">
</form>
<BR>
<form action="/posts/<%= @post.id %>/delete" method="post" >
  <!-- <input type="hidden" name="id" value="<%= @post.id %>"> -->
  <input type="submit" value="Delete post">
</form>